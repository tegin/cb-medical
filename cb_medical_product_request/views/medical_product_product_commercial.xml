<odoo>
    <record model="ir.ui.view" id="medical_product_product_commercial_form_view">
        <field
            name="name"
        >medical.product.product.commercial.form (in cb_medical_product_request)</field>
        <field name="model">medical.product.product.commercial</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <h3>
                        <field name="name" />
                    </h3>
                    <group>
                        <group name="medical_product" string="Medical Product">
                            <field name="medical_product_id" />
                        </group>
                        <group
                            name="product_tmpl_commercial_id"
                            string="Commercial Product Template"
                        >
                            <field
                                name="product_tmpl_commercial_domain"
                                invisible="1"
                            />
                            <field
                                name="product_tmpl_commercial_id"
                                domain="product_tmpl_commercial_domain"
                            />
                        </group>
                        <group name="code" string="National Code">
                            <field name="code" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="medical_product_product_commercial_search_view">
        <field
            name="name"
        >medical.product.product.commercial.search (in cb_medical_product_request)</field>
        <field name="model">medical.product.product.commercial</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="code" />
                <field name="medical_product_id" />
                <field name="product_tmpl_commercial_id" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="medical_product_product_commercial_tree_view">
        <field
            name="name"
        >medical.product.product.commercial.tree (in cb_medical_product_request)</field>
        <field name="model">medical.product.product.commercial</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="code" />
                <field name="medical_product_id" />
                <field name="product_tmpl_commercial_id" />
            </tree>
        </field>
    </record>
    <record
        model="ir.actions.act_window"
        id="medical_product_product_commercial_act_window"
    >
        <field name="name">Medical Product Commercial</field>
        <field name="res_model">medical.product.product.commercial</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.ui.menu" id="medical_product_product_commercial_menu">
        <field name="name">Medical Product Commercial</field>
        <field name="parent_id" ref="medical_product_request.medical_product_menu" />
        <field name="action" ref="medical_product_product_commercial_act_window" />
        <field name="sequence" eval="16" />
    </record>
</odoo>
