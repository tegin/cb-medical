<odoo>
    <record model="ir.ui.view" id="medical_product_product_form_view">
        <field
            name="name"
        >medical.product.product.form (in cb_medical_product_request)</field>
        <field name="model">medical.product.product</field>
        <field
            name="inherit_id"
            ref="medical_product_request.medical_product_product_form_view"
        />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    type="object"
                    name="action_view_product_commercial_ids"
                    class="oe_stat_button"
                    icon="fa-industry"
                >
                    <field
                        name="product_commercial_count"
                        widget="statinfo"
                        string="Presentations (NC)"
                    />
                </button>
            </div>
        </field>
    </record>
</odoo>
