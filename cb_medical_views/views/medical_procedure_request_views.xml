<odoo>

    <record id="medical_procedure_request_view_form" model="ir.ui.view">
        <field name="name">medical.procedure.request.view.form</field>
        <field name="model">medical.procedure.request</field>
        <field name="inherit_id" ref="medical_clinical_procedure.medical_procedure_request_view_form"/>
        <field name="arch" type="xml">
            <button name="draft2active" position="after">
                <button name="generate_event" type="object" attrs="{'invisible': [('state', '!=', 'active'), ('procedure_ids', '=', False)]}"/>
