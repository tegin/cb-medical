<odoo>

    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id"
               ref="cb_medical_administration_center.res_partner_view_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="center" string="Center"
                      attrs="{'invisible': [('is_center', '!=', True)]}">
                    <group>
                        <group>
                            <field name="center_alias"/>
                        </group>
                        <group>
                            <field name="encounter_sequence_prefix"
                                   style="padding-right: 1.0em"
                                   class="oe_inline"
                                   attrs="{'required': [('is_center', '=', True)]}"
                            />
                            <field name="encounter_sequence_id"
                                   groups="base.group_no_one"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
