<odoo>

    <record id="medical_coverage_template_view_form" model="ir.ui.view">
        <field name="name">medical.coverage.template.view.form</field>
        <field name="model">medical.coverage.template</field>
        <field name="inherit_id" ref="medical_financial_coverage.medical_coverage_template_view_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="coverage_agreements" string="Agreements" groups="cb_medical_financial_coverage_agreement.group_medical_agreement_list">
                    <field name="agreement_ids" nolabel="1" options="{'no_create': True}">
                        <tree delete="1">
                            <field name="internal_identifier"/>
                            <field name="name"/>
                            <field name="company_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <record id="medical_coverage_template_view_tree_delete" model="ir.ui.view">
        <field name="name">medical.coverage.template.form</field>
        <field name="model">medical.coverage.template</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="medical_financial_coverage.medical_coverage_template_view_tree"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="delete">1</attribute>
            </tree>
        </field>
    </record>

</odoo>
