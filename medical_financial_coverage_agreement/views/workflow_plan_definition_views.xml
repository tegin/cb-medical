<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="workflow_plan_definition_form">
        <field name="name">workflow.plan.definition.form</field>
        <field name="model">workflow.plan.definition</field>
        <field name="inherit_id"
               ref="medical_workflow.workflow_plan_definition_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(medical_coverage_agreement_item_plan_action)s"
                        type="action"
                        class="oe_stat_button" icon="fa-hand-holding-usd"
                        string="View Agreements"
                />
            </xpath>
        </field>
    </record>

</odoo>
