<odoo>

    <record model="ir.ui.view" id="medical_coverage_agreement_template_form">
        <field name="name">medical.coverage.agreement.template.form</field>
        <field name="model">medical.coverage.agreement.template</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Set a template for an Agreement">
                <group>
                    <group>
                        <field name="agreement_id"/>
                        <field name="template_id" options="{'no_create':True}"/>
                        <field name="set_items"/>
                    </group>
                </group>
                <footer>
                    <button string="Apply changes" name="run"
                            type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="set_medical_coverage_agreement_template_action"
        name="Change prices"
        res_model="medical.coverage.agreement.template"
        view_mode="form"
        target="new"
    />

</odoo>
