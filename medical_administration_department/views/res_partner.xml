<odoo>
    <record model="ir.ui.view" id="res_partner_form_view">
        <field
            name="name"
        >res.partner.form (in medical_administration_department)</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//h1" position="before">
                <h1>
                    <field
                        name="department_identifier"
                        attrs="{'invisible': [('is_department','=',False)]}"
                    />
                </h1>
            </xpath>
            <field name="vat" position="after">
                <field name="is_department" invisible="1" />
            </field>
            <xpath expr="//notebook/page[1]" position="before">
                <page
                    name="diagnostic_report_header"
                    string="Diagnostic Report Header"
                    attrs="{'invisible': [('is_department', '=', False)]}"
                >
                    <field name="diagnostic_report_header" />
                </page>
            </xpath>
        </field>
    </record>
    <record model="ir.actions.act_window" id="medical_department_action">
        <field name="name">Departments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_department', '=', True)]</field>
        <field
            name="context"
        >{'default_is_department': True, 'default_is_medical': True}</field>
    </record>
    <menuitem
        id="medical_conf_department_menu"
        name="Departments"
        parent="medical_base.medical_root_administration"
        action="medical_department_action"
        groups="group_medical_department_list"
        sequence="20"
    />
</odoo>
