<odoo>

    <record id="wizard_sale_preinvoice_group" model="ir.ui.view">
        <field name="name">wizard.sale.preinvoice.group</field>
        <field name="model">wizard.sale.preinvoice.group</field>
        <field name="arch" type="xml">
            <form string="Generate preinvoices">
                <group>
                    <field name="company_ids" widget="many2many_tags"/>
                </group>
                <group string="Customers" colspan="4">
                    <p colspan="4">(keep empty for making the invoices of all the customers)</p>
                    <field name="partner_ids" nolabel="1"
                           widget="many2many_list"/>
                </group>
                <footer>
                    <button name="run"
                            string="Create preinvoices"
                            type="object"
                            class="oe_highlight"/>
                    or
                    <button
                            name="action_cancel"
                            string="Cancel"
                            class="oe_link"
                            special="cancel"
                    />
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_wizard_sale_preinvoice_group"
                name="Generate preinvoices"
                res_model="wizard.sale.preinvoice.group"
                view_mode="form"
                view_type="form"
                target="new"/>

    <menuitem action="action_wizard_sale_preinvoice_group"
              id="menu_wizard_sale_preinvoice_group"
              parent="sale_preinvoice_group_menu"
              groups="cb_medical_sale_invoice_group_method.group_sale_preinvoice_group_manager"
              sequence="100"/>

</odoo>
