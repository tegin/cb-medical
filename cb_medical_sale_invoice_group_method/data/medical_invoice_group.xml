<odoo>
    <data noupdate="1">

        <record model="invoice.group.method" id="by_patient" forcecreate="True">
            <field name="name">By patient</field>
            <field name="criteria_fields_ids" eval="[(4,ref('cb_medical_careplan_sale.field_sale_order_patient_id'))]"/>
        </record>
        <record model="invoice.group.method" id="by_customer" forcecreate="True">
            <field name="name">By customer</field>

        </record>
        <record model="invoice.group.method" id="by_preinvoicing" forcecreate="True">
            <field name="name">By pre-invoicing</field>
            <field name="criteria_fields_ids" eval="[(4,ref('cb_medical_sale_invoice_group_method.field_sale_order_line_preinvoice_group_id'))]"/>
        </record>
        <record model="invoice.group.method" id="no_invoice" forcecreate="True">
            <field name="name">No invoices</field>
        </record>
        <record model="invoice.group.method" id="no_invoice_preinvoice" forcecreate="True">
            <field name="name">No invoices w/ Pre-invoice</field>
        </record>

    </data>
</odoo>
