<odoo>

        <record id="view_medical_preinvoice_group_tree" model="ir.ui.view">
            <field name="name">view.medical.preinvoice.group.tree</field>
            <field name="model">medical.preinvoice.group</field>
            <field name="arch" type="xml">
                <tree string="Pre-invoice groups">
                    <field name="name"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="view_medical_preinvoice_group_form" model="ir.ui.view">
            <field name="name">view.medical.preinvoice.group.form</field>
            <field name="model">medical.preinvoice.group</field>
            <field name="arch" type="xml">
                <form string="Pre-invoice group">
                <header>
                     <field name="status"
                            widget="statusbar"
                            clickable="True"/>
                </header>
                <sheet>
                    <field name="_barcode_scanned" widget="barcode_handler"/>
                    <div name="button_box" class="oe_button_box">
                        <button
                            name="validate_lines"
                            type="object"
                            string="Validate"
                            class="btn-primary"
                            attrs="{'barcode_trigger':'next'}"/>
                    </div>
                    <h1>
                        <field name="name"
                               attrs="{'invisible': [('name','=','/')]}">
                        </field>
                        <field name="encounter_id"/>
                    </h1>
                    <notebook>
                        <page string="Validated Lines">
                            <field name="validated_line_ids" mode="tree">
                            </field>
                        </page>
                        <page string="Non validated lines">
                            <field name="non_validated_line_ids" mode="tree"
                                   context="{'preinvoice_group': active_id}"/>
                        </page>
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>

    <record model="ir.actions.act_window" id="medical_preinvoice_group_action">
        <field name="name">Medical Pre-invoice Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">medical.preinvoice.group</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

</odoo>
