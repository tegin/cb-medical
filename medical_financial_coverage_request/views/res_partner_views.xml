<odoo>

    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id"
               ref="cb_medical_identifier.res_partner_view_form"/>
        <field name="arch" type="xml">
            <field name="center_alias" position="after">
                <field name="integer_center_identifier"
                       attrs="{'required': [('is_center', '=', True)]}"/>
            </field>
        </field>
    </record>

        <record id="res_partner_view_form_payor" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="medical_financial_coverage.res_partner_view_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="payor" string="Payor" attrs="{'invisible': [('is_payor','=', False)]}">
                    <group string="Integration" name="integration">
                        <field name="authorization_web_id"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
