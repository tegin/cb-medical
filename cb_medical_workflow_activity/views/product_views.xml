<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="product_template_form_view">
    	<field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="get_tmpl_activity" type="object" class="oe_stat_button" icon="fa-medkit"
                        attrs="{'invisible': ['|', ('type','!=','service'),('activity_tmpl_definition_ids','!=', False)]}"
                        string="View Activity"
                >
                    <field name="activity_tmpl_definition_ids" invisible="1"/>
                </button>
                <button name="generate_tmpl_activity" type="object" class="oe_stat_button" icon="fa-medkit"
                        attrs="{'invisible': ['|', ('type','!=','service'),('activity_tmpl_definition_ids','=', False)]}"
                        string="Create Activity"
                />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_normal_form_view">
    	<field name="name">product.product.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="get_activity" type="object" class="oe_stat_button" icon="fa-archive"
                        attrs="{'invisible': ['|', ('type','!=','service'),('activity_definition_ids','!=', False)]}"
                        string="Activity"
                >
                    <field name="activity_definition_ids" invisible="1"/>
                </button>
                <button name="generate_activity" type="object" class="oe_stat_button" icon="fa-archive"
                        attrs="{'invisible': ['|', ('type','!=','service'),('activity_definition_ids','=', False)]}"
                        string="Activity"
                />
            </xpath>
        </field>
    </record>
</odoo>
