<odoo>

    <record model="ir.ui.view" id="medical_encounter_validation_add_service_form_view">
        <field name="name">medical.encounter.validation.add.service.form (in pos_validation)</field>
        <field name="model">medical.encounter.validation.add.service</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="cb_medical_financial_coverage_request.medical_add_plan_definition_form"/>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="name">Add a Service</attribute>
            </form>
            <field name="careplan_id" position="after">
                <field name="encounter_id" invisible="1"/>
            </field>
            <field name="careplan_id" position="attributes">
                <attribute name="invisible">0</attribute>
                <attribute name="domain">[('encounter_id', '=', encounter_id)]</attribute>
            </field>
        </field>
    </record>

    <record model="ir.actions.act_window" id="medical_encounter_validation_add_service_act_window">
        <field name="name">Medical Encounter Validation Add Service</field> <!-- TODO -->
        <field name="res_model">medical.encounter.validation.add.service</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_encounter_id': active_id}</field>
        <field name="target">new</field>
    </record>


</odoo>
