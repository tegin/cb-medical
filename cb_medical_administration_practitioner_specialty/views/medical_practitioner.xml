<odoo>

    <record id="medical_practitioner_view_form" model="ir.ui.view">
        <field name="name">medical.practitioner.view.form</field>
        <field name="model">medical.practitioner</field>
        <field name="inherit_id" ref="medical_administration_practitioner.medical_practitioner_view_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="before">
                <field name="role_id" options="{'no_open': True}"/>
                <field name="specialty_required" invisible="1"/>
                <field name="specialty_id" attrs="{'required': [('specialty_required', '=', True)]}"/>
            </field>
            <page name="practitioner_roles" position="attributes">
                <attribute name="invisible">True</attribute>
            </page>
        </field>
    </record>

</odoo>
