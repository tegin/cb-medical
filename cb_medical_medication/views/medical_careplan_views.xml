<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="medical_careplan_view_form" model="ir.ui.view">
        <field name="name">medical.careplan.form</field>
        <field name="model">medical.careplan</field>
        <field name="inherit_id"
               ref="medical_clinical_careplan.medical_procedure_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="action" name="%(medical_careplan_medication_action)s"
                        context="{'default_medical_id': active_id}"
                        class="oe_stat_button" icon="fa-pills"
                        string="Add Medication"/>
            </xpath>
        </field>
    </record>

</odoo>
