<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_pos_session_form" model="ir.ui.view">
        <field name="name">pos.session.form.view</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object"
                        name="action_view_careplans"
                        class="oe_stat_button" icon="fa-hospital-o">
                    <field name="careplan_count" widget="statinfo"
                           string="Care Plans"/>
                    <field name="careplan_ids" invisible="1"/>
                </button>
                <button type="object"
                        name="action_view_sale_orders"
                        class="oe_stat_button" icon="fa-usd">
                    <field name="sale_order_count" widget="statinfo"
                           string="Sale Orders"/>
                    <field name="sale_order_ids" invisible="1"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
