<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="wizard_medical_careplan_close_view_form" model="ir.ui.view">
        <field name="name">wizard.medical.careplan.close.form</field>
        <field name="model">wizard.medical.careplan.close</field>
        <field name="arch" type="xml">
            <form string="Close careplan">
                <field name="careplan_id" invisible="1"/>
                <field name="pos_session_id"/>
                <footer>
                    <button type="object" name="run" string="Create"
                            class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_medical_careplan_close_action"
            model="ir.actions.act_window">
        <field name="name">Close Careplan</field>
        <field name="res_model">wizard.medical.careplan.close</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_careplan_id': active_id}</field>
        <field name="target">new</field>
    </record>

</odoo>
