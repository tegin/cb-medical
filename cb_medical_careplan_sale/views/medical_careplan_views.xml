<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="medical_careplan_view_form" model="ir.ui.view">
        <field name="name">medical.careplan.view.form</field>
        <field name="model">medical.careplan</field>
        <field name="inherit_id"
               ref="medical_clinical_careplan.medical_procedure_request_view_form"/>
        <field name="arch" type="xml">
            <button name="draft2active" position="before">
                <button name="create_sale_order"
                        type="object" string="Create Sales Orders"
                        class="oe_highlight"/>
            </button>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object"
                        name="action_view_sale_order"
                        string="Sale Orders"
                        class="oe_stat_button"  icon="fa-usd"
                        attrs="{'readonly':[('is_editable', '=', False)]}">
                </button>
            </xpath>
        </field>
    </record>
</odoo>
