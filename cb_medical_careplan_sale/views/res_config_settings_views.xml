<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.medical
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
               ref="medical_financial.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='medical_financial']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box"
                     groups="base.group_no_one">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label string="Third party product"/>
                        <div class="text-muted">
                            Product used for third party sale orders
                        </div>
                        <div class="text-muted">
                            <field name="default_third_party_product"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
