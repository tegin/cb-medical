<odoo>

    <record model="ir.ui.view" id="medical_patient_add_document_form_view">
        <field
            name="name"
        >medical.patient.add.document.form (in cb_medical_document_autogenerate)</field>
        <field name="model">medical.patient.add.document</field>
        <field name="arch" type="xml">
            <form string="Medical Patient Add Document">
                <!-- TODO -->
                <group>
                    <field name="patient_id" invisible="1" />
                    <field name="document_type_id" />
                    <field name="filename" invisible="1" />
                    <field name="data" filename="filename" />
                </group>
                <footer>
                    <button name="doit" string="OK" class="btn-primary" type="object" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="medical_patient_add_document_act_window">
        <field name="name">Medical Patient Add Document</field> <!-- TODO -->
        <field name="res_model">medical.patient.add.document</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_patient_id': active_id}</field>
        <field name="target">new</field>
    </record>


</odoo>
