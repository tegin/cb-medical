<odoo>

    <record model="ir.ui.view" id="medical_document_reference_form_view">
        <field
            name="name"
        >medical.document.reference.form (in cb_medical_document_autogenerate)</field>
        <field name="model">medical.document.reference</field>
        <field
            name="inherit_id"
            ref="medical_document.medical_document_reference_view_form"
        />
        <field name="arch" type="xml">
            <field name="document_type_id" position="after">
                <field name="autogenerated" />
            </field>
            <xpath expr="//div[@name='language_button_box']" position="attributes">
                <attribute name="attrs">{'invisible':1}</attribute>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="medical_document_reference_search_view">
        <field
            name="name"
        >medical.document.reference.search (in cb_medical_document_autogenerate)</field>
        <field name="model">medical.document.reference</field>
        <field
            name="inherit_id"
            ref="medical_document.medical_document_reference_view_search"
        />
        <field name="arch" type="xml">
            <field name="fhir_state" poisition="after">
                <separator />
                <filter
                    string="Autogenerated"
                    name="autogenerated"
                    domain="[('autogenerated','=', True)]"
                />
                <filter
                    string="Scanned"
                    name="scanned"
                    domain="[('autogenerated','=', False)]"
                />
                <separator />
                <filter
                    string="Administrative"
                    name="administrative"
                    domain="[('document_kind','=', 'administrative')]"
                />
                <filter
                    string="Medical"
                    name="medical"
                    domain="[('document_kind','=', 'medical')]"
                />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="medical_document_reference_tree_view">
        <field
            name="name"
        >medical.document.reference.tree (in cb_medical_document_autogenerate)</field>
        <field name="model">medical.document.reference</field>
        <field
            name="inherit_id"
            ref="medical_document.medical_document_reference_view_tree"
        />
        <field name="arch" type="xml">
         <field name="internal_identifier" position="before">
                    <button
                    type="object"
                    name="print_action"
                    class="oe_stat_button"
                    icon="fa-duotone fa-print"
                />
                    <button
                    type="object"
                    name="view_action"
                    class="oe_stat_button"
                    icon="fa-solid fa-eye"
                />

         </field>
         <field name="name" position="attributes">
            <attribute name="invisible">1</attribute>
         </field>
        <field name="internal_identifier" position="after">
            <field name="file_name" />
        </field>
        </field>
    </record>

</odoo>
