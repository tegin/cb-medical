<odoo>

    <record model="ir.ui.view" id="medical_patient_his_form">
        <field
            name="name"
        >medical.patient.form (in cb_medical_document_autogenerate)</field>
        <field name="model">medical.patient</field>
        <field name="inherit_id" ref="medical_base.medical_patient_his_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="medical_documents" string="Medical documents">
                    <field name="medical_document_ids" />
                    <button
                        name="%(medical_patient_add_document_act_window)d"
                        string="Add document"
                        type="action"
                        class="btn-primary"
                        context="{'default_patient_id': active_id, 'default_document_type': 'medical'}"
                    />
                </page>
                <page name="administrative_documents" string="Administrative documents">
                    <field name="administrative_document_ids" />
                    <button
                        name="%(medical_patient_add_document_act_window)d"
                        string="Add document"
                        type="action"
                        class="btn-primary"
                        context="{'default_patient_id': active_id, 'default_document_type': 'administrative'}"
                    />
                </page>
                <page
                    name="autogenerated_documents"
                    string="Autogenerated documents"
                    groups="base.group_no_one"
                >
                    <field name="autogenerated_document_ids" />
                </page>
            </notebook>
        </field>
    </record>



</odoo>
