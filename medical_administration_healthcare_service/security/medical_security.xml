<odoo>
    <record id="group_medical_healthcare_service_display" model="res.groups">
        <field name="name">HealthCare Service Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field
            name="implied_ids"
            eval="[(4, ref('medical_base.group_medical_root_menu')), (4, ref('medical_base.group_medical_administration_menu')), (4, ref('medical_administration.group_res_partner_display'))]"
        />
    </record>
    <record id="group_medical_healthcare_service_manager" model="res.groups">
        <field name="name">HealthCare Service Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field
            name="implied_ids"
            eval="[(4, ref('group_medical_healthcare_service_display')), (4, ref('medical_administration.group_res_partner_manager')),(4, ref('medical_base.group_medical_configuration_menu'))]"
        />
    </record>
    <!-- Generic groups -->
    <record id="medical_base.group_medical_user" model="res.groups">
        <field
            name="implied_ids"
            eval="[(4, ref('group_medical_healthcare_service_display'))]"
        />
    </record>
    <record id="medical_base.group_medical_configurator" model="res.groups">
        <field
            name="implied_ids"
            eval="[(4, ref('group_medical_healthcare_service_manager'))]"
        />
    </record>
    <!-- Record rules -->
    <record id="healthcare_service_display" model="ir.rule">
        <field name="name">Practitioner Display</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field
            name="groups"
            eval="[(4, ref('group_medical_healthcare_service_display'))]"
        />
        <field name="domain_force">[('is_healthcare_service', '=', True)]</field>
        <field name="perm_write" eval="False" />
        <field name="perm_create" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="perm_read" eval="True" />
    </record>
    <record id="healthcare_service_manager" model="ir.rule">
        <field name="name">Practitioner Manager</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field
            name="groups"
            eval="[(4, ref('group_medical_healthcare_service_manager'))]"
        />
        <field name="domain_force">[('is_healthcare_service', '=', True)]</field>
        <field name="perm_write" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_unlink" eval="False" />
        <field name="perm_read" eval="True" />
    </record>
</odoo>
