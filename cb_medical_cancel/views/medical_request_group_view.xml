<odoo>

    <record model="ir.ui.view" id="medical_request_group_form">
        <field name="name">medical.request.group.form</field>
        <field name="model">medical.request.group</field>
        <field name="inherit_id" ref="medical_clinical_request_group.medical_request_group_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='cancel']" position="after">
                <button name="%(cb_medical_cancel.medical_request_group_cancel_action)s"
                        string="Cancel"
                        states="draft,active"
                        type="action"/>
            </xpath>
        </field>
    </record>

</odoo>
