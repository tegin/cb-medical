<odoo>

    <record model="ir.ui.view" id="medical_procedure_request_cancel_form">
        <field name="name">medical.procedure.request.cancel</field>
        <field name="model">medical.procedure.request.cancel</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="medical_request_cancel_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="String">Cancel request group</attribute>
            </xpath>
        </field>
    </record>

    <record id="medical_procedure_request_cancel_action"
            model="ir.actions.act_window">
        <field name="name">Cancel Careplan</field>
        <field name="res_model">medical.procedure.request.cancel</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_request_id': active_id}</field>
        <field name="target">new</field>
    </record>

</odoo>
