<odoo>

    <record id="medical_laboratory_request_view_form" model="ir.ui.view">
        <field name="name">medical.laboratory.request.view.form</field>
        <field name="model">medical.laboratory.request</field>
        <field name="inherit_id" ref="medical_clinical_laboratory.medical_laboratory_request_view_form"/>
        <field name="arch" type="xml">
            <field name="performer_id" position="after">
                <field name="laboratory_service_ids" widget="many2many_tags"/>
            </field>
            <notebook position="inside">
                <page string="Events" id="event">
                    <field name="laboratory_event_ids" context="{'default_laboratory_request_id': id, 'default_encounter_id': encounter_id, 'default_patient_id': patient_id, 'default_service_id': service_id, 'tree_view_ref':'cb_medical_clinical_laboratory.medical_laboratory_event_view_tree'}"/>
                </page>
            </notebook>
        </field>
    </record>

</odoo>

