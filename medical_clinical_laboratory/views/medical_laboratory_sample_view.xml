<odoo>
    <record id="medical_procedure_sample_view_tree" model="ir.ui.view">
        <field name="name">medical.laboratory.sample.view.tree</field>
        <field name="model">medical.laboratory.sample</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="medical_workflow.medical_request_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Laboratory samples</attribute>
                <attribute name="decoration-muted">state=='cancelled'</attribute>
            </xpath>
        </field>
    </record>
    <record id="medical_laboratory_sample_view_form" model="ir.ui.view">
        <field name="name">medical.laboratory.sample.view.form</field>
        <field name="model">medical.laboratory.sample</field>
        <field name="inherit_id" ref="medical_request_form" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="string">Laboratory Sample</attribute>
            </form>
            <group name="sale" position="inside">
                <field name="laboratory_sample_id" />
            </group>
        </field>
    </record>
    <record id="medical_laboratory_sample_view_search" model="ir.ui.view">
        <field name="name">medical.laboratory.sample.view.search</field>
        <field name="model">medical.laboratory.sample</field>
        <field name="arch" type="xml">
            <search string="Medical Laboratory samples">
                <field name="internal_identifier" />
                <field name="patient_id" />
                <field name="name" />
                <field name="state" />
                <field name="priority" />
                <field name="performer_id" />
                <field name="order_by_id" />
                <field name="intent" />
                <newline />
                <filter domain="[('state', '=', 'draft')]" help="Draft" name="Draft" />
                <filter
                    domain="[('state', '=', 'active')]"
                    help="Active"
                    name="Active"
                />
                <filter
                    domain="[('state', '=', 'completed')]"
                    help="Completed"
                    name="Completed"
                />
                <filter
                    domain="[('state', '=', 'suspended')]"
                    help="Suspended"
                    name="Suspended"
                />
                <filter
                    domain="[('state', '=', 'entered-in-error')]"
                    help="Error"
                    name="Error"
                />
                <filter
                    domain="[('state', '=', 'cancelled')]"
                    help="Cancelled"
                    name="Cancelled"
                />
                <newline />
                <group expand="0" name="groupby" string="Group By...">
                    <filter
                        string="Patient"
                        name="Patient"
                        domain="[]"
                        context="{'group_by':'patient_id'}"
                    />
                    <filter
                        string="Performer"
                        name="Performer"
                        domain="[]"
                        context="{'group_by':'performer_id'}"
                    />
                    <filter
                        string="Priority"
                        name="Priority"
                        domain="[]"
                        context="{'group_by':'priority'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="medical_laboratory_sample_action">
        <field name="name">Laboratory Samples</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">medical.laboratory.sample</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <menuitem
        id="medical_laboratory_sample"
        name="Laboratory Samples"
        parent="medical_base.medical_clinical_request"
        sequence="10"
        action="medical_laboratory_sample_action"
    />
</odoo>
