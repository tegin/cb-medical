<odoo>

    <record id="medical_laboratory_event_view_tree" model="ir.ui.view">
        <field name="name">medical.laboratory.event.view.tree</field>
        <field name="model">medical.laboratory.event</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="medical_workflow.medical_event_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Laboratory Event</attribute>
            </xpath>
        </field>

    </record>

    <record id="medical_laboratory_event_view_form" model="ir.ui.view">
        <field name="name">medical.laboratory.event.view.form</field>
        <field name="model">medical.laboratory.event</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="medical_workflow.medical_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="string">Laboratory Event</attribute>
            </xpath>
            <group name="inheritance" position="inside">
                <field name="laboratory_request_id"/>
            </group>
        </field>
    </record>
    
    <record id="medical_laboratory_event_view_search" model="ir.ui.view">
        <field name="name">medical.laboratory.event.view.search</field>
        <field name="model">medical.laboratory.event</field>
        <field name="arch" type="xml">
            <search string="Medical Laboratory Event">
                <field name="internal_identifier"/>
                <field name="patient_id"/>
                <field name="performer_id"/>
                <field name="laboratory_request_id"/>
                <field name="name" />
                <field name="state"/>
                <newline />
                <filter domain="[('state', '=', 'preparation')]" help="Preparation"/>
                <filter domain="[('state', '=', 'in-progress')]" help="In progress"/>
                <filter domain="[('state', '=', 'completed')]" help="Completed"/>
                <filter domain="[('state', '=', 'suspended')]" help="Suspended"/>
                <filter domain="[('state', '=', 'entered-in-error')]" help="Error"/>
                <filter domain="[('state', '=', 'aborted')]" help="Aborted"/>
                <filter domain="[('state', '=', 'unknown')]" help="Unknown"/>
                <newline/>
                <group expand="0" name="groupby" string="Group By...">
                    <filter string="Patient"
                            domain="[]"
                            context="{'group_by':'patient_id'}" />
                    <filter string="Performer"
                            domain="[]"
                            context="{'group_by':'performer_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="medical_laboratory_event_action">
        <field name="name">Laboratory Events</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">medical.laboratory.event</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="medical_laboratory_event"
              name="Laboratory events"
              parent="medical_clinical.medical_clinical_event"
              sequence="10"
              action="medical_laboratory_event_action" />

</odoo>

